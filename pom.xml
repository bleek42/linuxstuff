	</description>

	<licenses>
		<license>
			<name>MIT License</name>
			<url>http://www.opensource.org/licenses/mit-license.php</url>
			<distribution>repo</distribution>
		</license>
	</licenses>

	<url>https://github.com/lightblueseas/linuxstuff</url>

	<scm>
		<connection>scm:git:git:@github.com:lightblueseas/linuxstuff.git</connection>
		<developerConnection>scm:git:git@github.com:lightblueseas/linuxstuff.git</developerConnection>
		<url>git:@github.com:lightblueseas/linuxstuff.git</url>
	</scm>

	<ciManagement>
		<system>travis-ci</system>
		<url>https://travis-ci.org/lightblueseas/linuxstuff</url>
	</ciManagement>

	<issueManagement>
		<system>github</system>
		<url>https://github.com/lightblueseas/linuxstuff/issues</url>
	</issueManagement>

	<dependencies>
	</dependencies>

	<build>

		<resources>

			<resource>
				<filtering>false</filtering>
				<directory>src/main/resources</directory>
			</resource>

			<resource>
				<filtering>false</filtering>
				<directory>src/main/scripts</directory>
